.top-img1{
	width: 24rpx;
	height:30rpx;
	margin-right: 20rpx;
	position: relative;
	top: 4rpx;
}
.top-img2{
	width: 16rpx;
	height: 10rpx;
	margin-left: 14rpx;
	position: relative;
	top: -2rpx;
}
.top{
	height: 70rpx;
	width: 100%;
	box-sizing: border-box;
	padding: 0rpx 30rpx;
	line-height: 60rpx;
}
.banner-box{
	width: 100%;
	height: 360rpx;
}
.banner{
	width: 100%;
	height: 100%;
}
.banbox{
	width: 100%;
	height: 100%;
	position: relative;
	z-index: 1;
}
.banimg{
	width: 100%;
	height: 100%;
}
.circel-nav{
	width: 25%;
	text-align: center;
}
.circel-nav image{
	width: 90rpx;
	height: 90rpx;
	margin: 50rpx 0rpx 30rpx;
}
.he20{
	width: 100%;
	height: 20rpx;
}
.he10{
	width: 100%;
	height: 10rpx;
}
.info-box{
	width: 100%;
	box-sizing: border-box;
	padding: 40rpx 4%;
}
.info{
	width: 100%;
	padding-bottom: 30rpx;
	box-shadow: 0rpx 0rpx 20rpx #DEDEDE;
	overflow: hidden;
	}
.info-top{
	width: 100%;
	height: 80rpx;
}
.info-top view{
	width: 50%;
	height: 100%;
	line-height: 80rpx;
	text-align: center;
}
.info-top .active{
	background: #2E82FF;
	color: #fff;
}
.info-list{
	box-sizing: border-box;
	padding: 40rpx;
	border-bottom: solid 1rpx #EDEDED;
}
.info-list input{
	margin-left: 50rpx;
	position: relative;
	top: 14rpx;
}
.line{
	box-sizing: border-box;
	padding: 40rpx 4% 0rpx;
}
.line-red{
	border-left: solid 6rpx #2E82FF;
	text-indent: 20rpx;
}
.list-two{
	box-sizing: border-box;
	padding: 40rpx 4% 30rpx;
}
.list-left{
	width: 66%;
	height: 140rpx;
}
.list-two .flo-right{
	width: 29.2%;
	height: 140rpx;
}
.list-two .flo-right image{
	width: 100%;
	height: 100%;
}


.fixd{
	position: fixed;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.6);
	top: 0rpx;
	z-index: 1000;
}
.fixd-box{
	width:90%;
	height: 400rpx;
	margin: 50% 5%;
	box-sizing: border-box;
	padding: 30rpx;
}
.fixd-box button{
	display: inline-block;
	width: 40%;
	height: 70rpx;
	line-height:70rpx;
	margin: 80rpx 30%;
}

.regulation{
	width: 80%;
	background: rgb(240,240,240);
	box-sizing: border-box;
	padding:30rpx 30rpx 40rpx;
	text-align: justify;
	border-radius: 6rpx;
	left:10%;
	position: absolute;
}
.regulation .text{
	margin-top: 30rpx;
}